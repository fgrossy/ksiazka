<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Dinner Party Planner" Height="250" Width="300">
    <Grid Margin="10">
        <TextBlock Text="Number of People:" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <xctk:IntegerUpDown x:Name="numPeopleUpDown" Minimum="1" Maximum="20" Value="5" VerticalAlignment="Top" Margin="120,0,0,0" />

        <TextBlock Text="Fancy Decorations:" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,40,0,0" />
        <CheckBox x:Name="fancyDecorationsCheckBox" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="120,40,0,0" IsChecked="True" />

        <Button Content="Calculate Cost" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="CalculateCostButton_Click" />

        <TextBlock Text="Cost:" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="0,80,0,0" />
        <Label x:Name="costLabel" BorderThickness="1" BorderBrush="Gray" Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="40,80,0,0" />
    </Grid>
</Window>
